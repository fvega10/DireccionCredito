                                                <div class="help-block with-errors" style="color:red"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <span class="col-sm-2 text-black-50 mt-2 text-center">Seleccione Oficina </span>
                                    <div class="col-sm-3">
                                        <div class="input-group input-group-sm mt-2">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="far fa-building"></i></span>
                                            </div>
                                            <select class="form-control" id="IdOficina" name="IdOficina" required>
                                                <option value="">Seleccione una Opción</option>

                                                @foreach (var item in Oficinas)
                                                {
                                                    <option value="@item.Oficina_Codigo">@item.Oficina_Codigo @item.Oficina_Descripcion </option>
                                                }



                                            </select>
                                            <div class="input-group input-group-sm mt-2">
                                                <div class="help-block with-errors" style="color:red"></div>
                                            </div>
                                        </div>
                                    </div>

